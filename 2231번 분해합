import java.util.Scanner;
public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int num = sc.nextInt();
		for(int i=1; i<=num; i++) {
			int number = i;
			int sum = 0;
			while(number!=0) {
				sum += number%10;
				number = number/10;
			}
			if(sum + i == num) {
				System.out.print(i);
				break;
			}
			if(i==num) {
				System.out.print(0);
			}
		}
		
		sc.close();
		
	}
}
