import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int t = sc.nextInt();
		String[] arr = new String[t];
		for(int i=0; i<t; i++) {
			int num = sc.nextInt();
			String str = sc.next();
			arr[i] = str;
			for(int k=0; k<arr[i].length(); k++) {
				for(int j=0; j<num; j++) {
					System.out.print(arr[i].charAt(k));
				}
			}
			System.out.println();
			
		}
		
		sc.close();
	}
}
