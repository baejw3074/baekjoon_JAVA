import java.util.Scanner;
public class Main {
	
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int num = sc.nextInt();
		
		int movie = 666;
		int count = 1;
		while(count!=num) {
			movie +=1;
			if(String.valueOf(movie).contains("666")) {
				count+=1;
			}
		}
		System.out.print(movie);
		sc.close();
		
		
	}
}

